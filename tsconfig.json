{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/lib/*": ["lib/*"],
      "@/components/*": ["components/*"],
      "@/components/ui/*": ["components/ui/*"],
      "@/components/resort/*": ["components/resort/*"],
      "@/app/*": ["app/*"],
      "@/types/*": ["lib/types/*"],
      "@/utils/*": ["lib/utils/*"],
      "lib/*": ["./lib/*"],
      "components/*": ["./components/*"],
      "components/ui/*": ["./components/ui/*"],
      "components/resort/*": ["./components/resort/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "lib/**/*.ts",
    "lib/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
